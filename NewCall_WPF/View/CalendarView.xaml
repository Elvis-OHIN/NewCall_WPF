        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Mois Précédent" Click="OnPreviousMonthClicked"/>
            <Label Name="Month" Content="{Binding CurrentMonth.NameMonth}" />
            <Button Content="Mois Suivant" Click="OnNextMonthClicked"/>
        </StackPanel>

        <DataGrid IsReadOnly="True" ItemsSource="{Binding CurrentMonth.Weeks}" Name="CalendarData"
                  Grid.Row="1" AutoGenerateColumns="False"
                  RowHeight="110">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Lundi" Width="240" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <!-- Élément central -->
                                <TextBlock Text="{Binding Monday.DayNumber}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Monday.IsEnable}" Value="true">
                                                    <Setter Property="Foreground" Value="#FFA500"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <!-- Boutons en bas -->
                                <Grid Grid.Row="1" Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button 
                                            Command="{Binding DataContext.ShowCallViewCommand, 
                                                    RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding Monday.DayNumber}"
                                            Grid.Column="0" 
                                            BorderThickness="0"
                                            Foreground="White"
                                            FontSize="12"
                                            FontFamily="Montserrat"
                                            Cursor="Hand"
                                            Margin="5"> 
                                        <Button.Style>
                                            <Style TargetType="ContentControl">
                                                <Setter Property="Content" Value="Faire l'appel"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Monday.IsEnable}" Value="true">
                                                        <Setter Property="Content" Value="Refaire l'appel"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Monday.IsEnable}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>

                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border  Height="30"
                                                    CornerRadius="20"
                                                    Background="#FF1976D2" >
                                                <ContentPresenter VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <!-- Bouton 2 -->
                                    <Button Content="Liste des Absents" 
                                        Command="{Binding DataContext.ShowAbsenceViewCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding Monday.DayNumber}" 
                                        Grid.Column="1"
                                        BorderThickness="0"
                                        Foreground="White"
                                        FontSize="11"
                                        FontFamily="Montserrat"
                                        Cursor="Hand"
                                        Margin="5">
