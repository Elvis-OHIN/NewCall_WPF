                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Monday.IsEnable}" Value="false">
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Monday.IsEnable}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>

